<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="10dp" android:bottom="10dp">
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="@color/prozr" />
                </shape>
            </item>
            <item android:top="10dp" android:left="5dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#E2E2E2" android:startColor="@color/prozr" />
                    <stroke android:width="0dp" android:color="#BABABA" />
                    <corners android:radius="11dp" />
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>