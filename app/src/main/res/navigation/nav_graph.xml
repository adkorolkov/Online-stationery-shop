<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/CatalogFragment">

    <fragment
        android:id="@+id/CatalogFragment"
        android:name="com.example.onlinestationeryshop.CatalogFragment"
        android:label="fragment_catalog"
        tools:layout="@layout/fragment_catalog" >
    <action
        android:id="@+id/action_CatalogFragment_to_InfoGoodFragment"
        app:destination="@id/InfoGoodFragment" />
    <action
        android:id="@+id/action_CatalogFragment_to_CartFragment"
        app:destination="@id/CartFragment"/>

    </fragment>
    <fragment
        android:id="@+id/InfoGoodFragment"
        android:name="com.example.onlinestationeryshop.InfoGoodFragment"
        android:label="fragment_info_good"
        tools:layout="@layout/fragment_info_good" >
        <action
            android:id="@+id/action_InfoGoodFragment_to_Catalog_Fragment"
            app:destination="@id/CatalogFragment"/>
        <action
            android:id="@+id/action_InfoGoodFragment_to_CartFragment"
            app:destination="@id/CartFragment"/>
        <argument
            android:name="IdArg"
            android:defaultValue="0"/>
    </fragment>
    <fragment
        android:id="@+id/CartFragment"
        android:name="com.example.onlinestationeryshop.CartFragment"
        android:label="cart_fragment"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/action_CartFragment_to_CatalogFragment"
            app:destination="@id/CatalogFragment"></action>

    </fragment>
</navigation>