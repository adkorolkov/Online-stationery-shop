<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/EnterFragment">

    <fragment
        android:id="@+id/EnterFragment"
        android:name="com.example.onlinestationeryshop.EnterFragment"
        android:label="fragmet_enter"
        tools:layout="@layout/fragment_enter">
        <action
            android:id="@id/action_to_CatalogFragment"
            app:destination="@id/CatalogFragment"/>
        <action
            android:id="@+id/action_to_RegistrationFragment"
            app:destination="@id/RegistrationFragment"/>

    </fragment>

    <fragment
        android:id="@+id/RegistrationFragment"
        android:name="com.example.onlinestationeryshop.RegistrationFragment"
        android:label="fragment_reg"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@id/action_to_CatalogFragment"
            app:destination="@id/CatalogFragment"/>

    </fragment>
    <fragment
        android:id="@+id/CatalogFragment"
        android:name="com.example.onlinestationeryshop.CatalogFragment"
        android:label="fragment_catalog"
        tools:layout="@layout/fragment_catalog" >
    <action
        android:id="@+id/action_to_Profile"
        app:destination="@id/ProfileFragment" />
    <action
        android:id="@+id/action_to_CartFragment"
        app:destination="@id/CartFragment"/>
    <action
        android:id="@+id/action_to_InfoGoodFragment"
        app:destination="@id/InfoGoodFragment" />

    </fragment>
    <fragment
        android:id="@+id/InfoGoodFragment"
        android:name="com.example.onlinestationeryshop.InfoGoodFragment"
        android:label="fragment_info_good"
        tools:layout="@layout/fragment_info_good" >
        <action
            android:id="@id/action_to_Profile"
            app:destination="@id/ProfileFragment"></action>
        <action
            android:id="@id/action_to_CatalogFragment"
            app:destination="@id/CatalogFragment"/>
        <action
            android:id="@id/action_to_CartFragment"
            app:destination="@id/CartFragment"/>
        <argument
            android:name="IdArg"
            android:defaultValue="0"/>
    </fragment>
    <fragment
        android:id="@+id/CartFragment"
        android:name="com.example.onlinestationeryshop.CartFragment"
        android:label="cart_fragment"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/action_to_CatalogFragment"
            app:destination="@id/CatalogFragment"></action>
        <action
            android:id="@id/action_to_Profile"
            app:destination="@id/ProfileFragment"></action>

    </fragment>
    <fragment
        android:id="@+id/ProfileFragment"
        android:name="com.example.onlinestationeryshop.ProfileFragment"
        android:label="fragment_profile">
        <action
            android:id="@id/action_to_CatalogFragment"
            app:destination="@id/CatalogFragment"></action>
        <action
            android:id="@id/action_to_CartFragment"
            app:destination="@id/CartFragment"/>
        <action
            android:id="@id/action_to_InfoGoodFragment"
            app:destination="@id/InfoGoodFragment" />
        <action
            android:id="@+id/action_to_EnterFragment"
            app:destination="@id/EnterFragment"/>



    </fragment>
</navigation>